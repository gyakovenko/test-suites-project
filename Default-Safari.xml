!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite guice-stage="DEVELOPMENT" name="Default suite">
     <test verbose="2" name="Default-Safari">
           <groups>
                <run>
                      <exclude name="firefox"></exclude>
                      <exclude name="chrome"></exclude>
                      <exclude name="ie"></exclude>
                      <exclude name="opera"></exclude>
                </run>
           </groups>
           <packages>
                <package name="com.sqa.gy.*"></package>
           </packages>
     </test>
</suite>